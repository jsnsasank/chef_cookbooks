<% if @port == 80 -%>
    NameVirtualHost  *:80
<% end -%>

<VirtualHost *:<%= @port %> >
  ServerName  <%= @domain %>
  DocumentRoot  <%= @doc_root %>

  <Directory />
     AllowOverride  none
     Require all granted
  </Directory>

   <Directory <%= @doc_root %> >
      Options Indexes FollowSymLinks
      AllowOverride None
      Require all granted
  </Directory>

</VirtualHost>
